@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SafeVault</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="topbar">
        <div class="container">
            <h1 class="brand">SafeVault</h1>
            <nav class="topnav" aria-label="Main navigation">
                <a asp-controller="Home" asp-action="Index">Login</a>
                <a asp-controller="Home" asp-action="Register">Register</a>
                <a asp-controller="Home" asp-action="ApiDemo">API Demo</a>
                <a asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                @if (string.Equals(Context.Session.GetString("SafeVault.Role"), "Admin", StringComparison.OrdinalIgnoreCase))
                {
                    <a asp-controller="Home" asp-action="AdminPanel">Admin Panel</a>
                }
                <form asp-controller="Home" asp-action="Logout" method="post" class="logout-form">
                    <button type="submit" class="link-button">Logout</button>
                </form>
            </nav>
        </div>
    </header>

    <main class="container content" role="main">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
